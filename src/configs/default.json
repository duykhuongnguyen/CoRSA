{
  "model": {
    "name": "meta-llama/Llama-3.1-8B-Instruct",
    "max_seq_length": 2048,
    "trust_remote_code": true,
    "dtype": "auto"
  },
  "dataset": {
    "name": "counterfact",
    "split": "test",
    "source": "hf",
    "limit": null
  },
  "method": {
    "name": "lora",
    "lora_rank": 32,
    "lora_alpha": 64,
    "lora_dropout": 0.0,
    "target_modules": [
      "q_proj",
      "k_proj",
      "v_proj",
      "o_proj",
      "gate_proj",
      "up_proj",
      "down_proj"
    ],
    "sam_rho": 0.05,
    "sam_eps": 1e-12,
    "sft_weight": 1.0,
    "use_pcgrad": true
  },
  "training": {
    "batch_size": 8,
    "grad_accum_steps": 4,
    "warmup_steps": 5,
    "epochs": 10,
    "learning_rate": 0.0002,
    "output_root": "outputs",
    "save_steps": 200,
    "seed": 42,
    "gradient_checkpointing": true
  },
  "evaluation": {
    "max_new_tokens": 128,
    "temperature": 0.7,
    "top_p": 1.0,
    "tensor_parallel_size": 1,
    "gpu_memory_utilization": 0.9,
    "dtype": "auto",
    "eval_runs": 1,
    "eval_new": true
  }
}
